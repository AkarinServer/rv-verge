{
  "version": "0.1.0",
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "bundle": {
    "active": true,
    "longDescription": "RV Verge - Clash Verge Rev lightweight version for RISC-V",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": ["resources"],
    "publisher": "RV Verge",
    "externalBin": [],
    "copyright": "GNU General Public License v3.0",
    "category": "DeveloperTool",
    "shortDescription": "RV Verge",
    "createUpdaterArtifacts": false
  },
  "build": {
    "beforeBuildCommand": "npm run web:build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173/",
    "beforeDevCommand": "npm run web:dev"
  },
  "productName": "RV Verge",
  "identifier": "io.github.AkarinServer.rv-verge",
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["rv-verge"]
      }
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "RV Verge",
        "url": "/",
        "width": 940,
        "height": 700,
        "minWidth": 520,
        "minHeight": 520,
        "center": true,
        "visible": true,
        "fullscreen": false,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "capabilities": ["desktop-capability", "migrated"],
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["**"],
          "requireLiteralLeadingDot": false
        }
      },
      "csp": null
    }
  }
}
